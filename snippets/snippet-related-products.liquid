{% assign number_of_related_products_to_show = settings.product-similar-products-amount | to_number %}

{% capture number_of_related_products_to_fetch %}{{ number_of_related_products_to_show | plus: 1 }}{% endcapture %}

{% if collection == null or collection.handle == 'frontpage' or collection.handle == 'all' %}
  {% assign found_a_collection = false %}
  {% for c in product.collections %}
    {%- comment %}<locksmith:7cae>{% endcomment -%}
      {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: c, subject_parent: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
    {%- comment %}</locksmith:7cae>{% endcomment -%}
    {% if found_a_collection == false and c.handle != 'frontpage' and c.handle != 'all' %}
      {% assign found_a_collection = true %}
      {% assign collection = c %}
    {% endif %}
  {% endfor %}
{% endif %}

{% if collection and collection.products_count > 1 %}
  {% assign current_product = product %}

  <section class="similar-products row">
    <h2 class="title">{{ 'products.similar_products' | t }}</h2>
    <div class="product-grid">
      {% assign current_product_found = false %}
      {%- comment %}<locksmith:6cc7>{% endcomment -%}
        {%- assign locksmith_ab15_forloop__size = 0 %}{% for product in collection.products limit: number_of_related_products_to_fetch %}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_ab15_forloop__size = locksmith_ab15_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_ab15_forloop__index = nil -%}
      {%- comment %}</locksmith:6cc7>{% endcomment -%}
      {% for product in collection.products limit: number_of_related_products_to_fetch %}
        {%- comment %}<locksmith:8370>{% endcomment -%}
          {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_ab15_forloop__index == nil %}{% assign locksmith_ab15_forloop__index = 1 %}{% assign locksmith_ab15_forloop__index0 = 0 %}{% else %}{% assign locksmith_ab15_forloop__index = locksmith_ab15_forloop__index | plus: 1 %}{% assign locksmith_ab15_forloop__index0 = locksmith_ab15_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_ab15_forloop__index == 1 %}{% assign locksmith_ab15_forloop__first = true %}{% else %}{% assign locksmith_ab15_forloop__first = false %}{% endif %}{% if locksmith_ab15_forloop__index == locksmith_ab15_forloop__size %}{% assign locksmith_ab15_forloop__last = true %}{% else %}{% assign locksmith_ab15_forloop__last = false %}{% endif %}{% assign locksmith_ab15_forloop__rindex = locksmith_ab15_forloop__size | minus: locksmith_ab15_forloop__index | minus: 1 %}{% assign locksmith_ab15_forloop__rindex0 = locksmith_ab15_forloop__size | minus: locksmith_ab15_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
        {%- comment %}</locksmith:8370>{% endcomment -%}
        {% if product.handle == current_product.handle %}
          {% assign current_product_found = true %}
        {% else %}
          {% unless current_product_found == false and locksmith_ab15_forloop__last %}
            {% include 'snippet-product-item' with number_of_related_products_to_show %}
          {% endunless %}
        {% endif %}
      {% endfor %}
    </div>
  </section>

{% endif %}
