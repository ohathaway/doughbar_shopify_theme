{% paginate search.results by 24 %}
<div class="row">
  <div class="large-12 columns">
    <h1 class="page-title">{{ 'general.search.page_title' | t }}</h1>
  </div>
</div>

<div class="row">
  <div class="columns">
    <div class="divider"></div>
  </div>
</div>
<div class="row summary narrow">
  {% if search.terms != "" %}
  <div class="large-4 columns">
    {% capture search_terms %}<strong>"{{ search.terms }}"</strong>{% endcapture %}
    <p>{{ 'general.search.results_title_html' | t: search_terms: search_terms }}</p>
  </div>    
  {% endif %}

  <div class="large-4 columns">
    <div class="searchbar-container">
      <form  action="/search" method="get" role="search">
        {% if settings.search-products-only %}<input type="hidden" name="type" value="product" />{% endif %}
        <input name="q" type="text" placeholder="{{ 'general.search.placeholder' | t }}" class="hint text" value="{{ search.terms }}" />
        <button aria-hidden="false" class="glyph search"></button>
      </form>
    </div>
  </div>

  {% if search.terms != "" %}
  <div class="large-4 columns">
    {% capture search_results_size %}<strong>{{ search.results.size }}</strong>{% endcapture %}
    <p>{{ 'general.search.results_size_html' | t: search_results_size: search_results_size }}</p>
  </div>
  {% endif %}
</div>
<div class="row">
  <div class="columns">
    <div class="divider results"></div>
  </div>
</div>

{% if search.results != empty %}
  
  <!-- Begin results -->
  {% if settings.search-products-only %}
    <section class="row">
      <div class="product-grid clearfix">
        {% for product in search.results %}
          {%- comment %}<locksmith:f6fe>{% endcomment -%}
            {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: search, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
          {%- comment %}</locksmith:f6fe>{% endcomment -%}
          {% include 'snippet-product-item' with '4' %}
        {% endfor %}
      </div>
    </section>
  {% else %} 
  {% comment %} mixed results {% endcomment %}
    {% for item in search.results %}
      {%- comment %}<locksmith:319b>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: item, subject_parent: search, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
      {%- comment %}</locksmith:319b>{% endcomment -%}
      <div class="row results narrow">
        <div class="large-4 columns text-center">
          {% if item.object_type == 'article' %}
            {% if item.image %}
              <div class="thumbnail">
                <a href="{{ item.url }}" title="{{ item.title | escape }}">
                  {{ item | img_tag: item.title, 'class', 'medium' }}
                </a>
              </div>
            {% endif %}
          {% else %}
            <div class="thumbnail">
              {% if item.featured_image.size > 0 %}
              <a href="{{ item.url }}">{{ item.featured_image | product_img_url: 'medium' | img_tag }}</a>
              {% endif %}
            </div>
          {% endif %}
          
        </div>
        <div class="large-8 columns">
          <div class="search-result">
            <h3>{{ item.title | highlight: search.terms | link_to: item.url }}</h3>
            {{ item.content | strip_html | truncatewords: 40 | highlight: search.terms }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="columns">
          <div class="divider results"></div>
        </div>
      </div>
    {% endfor %}
  {% endif %}
<!-- End results -->
{% endif %}

<div class="row">
  <div class="right columns large-6">
    {% include 'snippet-pagination' %}
  </div>
</div>

{% endpaginate %}
